.mensajes-iniciales{
    text-align: center;
    width: 80%;
    height: 60%;
    position: absolute;
    top: 20%;
    margin: 0 10%;
}
.mensajes-iniciales h2{

    font-weight: 700;    
    font-size: 24px;
    color: #343A40;
    line-height: 28.8px;
    margin: 1% 0;
}
.mensajes-iniciales p{

    font-weight: 400;
    font-size: 16px;
    color: #495057;    
    line-height: 24px;
}
.contenido-rectangulo{
  
    font-family: "Inter", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-variation-settings: "slnt" 0;
    font-size: 24px;
    color: #495057;        
    line-height: 36px;  
    width: 80%;
    height: 80%;
    margin: 10%;
    border: none;
    outline: none;
    resize: none;
    background: red;
       
}
.contenido-rectangulo:active {
    visibility: hidden;
}